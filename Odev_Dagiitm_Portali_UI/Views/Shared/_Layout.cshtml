<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Odev_Dagiitm_Portali_UI</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Odev_Dagiitm_Portali_UI.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Ödev Dağıtım Portalı</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark " asp-area="" asp-controller="Home" asp-action="Index">Ana Sayfa  </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark AdminPage Logined" asp-area="" asp-controller="Admin" asp-action="Index">Admin Paneli</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark StudentPage Logined" asp-area="" asp-controller="Homework" asp-action="StudentHomework">Ödevlerim</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark StudentPage Logined" asp-area="" asp-controller="Homework" asp-action="MyHomeworkSubmission">Ödev Teslimlerim</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark Logined TeacherPage" asp-area="" asp-controller="Homework" asp-action="AddHomework">Ödev Ekle</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark Logined TeacherPage" asp-area="" asp-controller="Homework" asp-action="MyHomeworks">Ödevler</a>
                        </li>
                        
                        <li class="nav-item">
                            <a class="nav-link text-dark Logined TeacherPage" asp-area="" asp-controller="Homework" asp-action="HomeworkSubmission">Teslimler</a>
                        </li>
                    </ul>
                    
                    <ul class="navbar-nav flex-grow-2">
                        <li class="nav-item NotLogined">
                            <a class="nav-link text-dark" href="~/Home/Login">Oturum Aç</a>
                        </li>
                        <li class="nav-item NotLogined">
                            <a class="nav-link text-dark" href="~/Home/Register">Kayıt Ol</a>
                        </li>
                        <li class="nav-item Logined">
                            <a class="nav-link text-dark" href="~/Home/UserPage" id="UserName"></a>
                        </li>
                        <li class="nav-item Logined">
                            <a class="nav-link text-dark" href="#" id="Logout">Oturumu Kapat</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            2024 - Ödev Dağıtım Portalı 
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
